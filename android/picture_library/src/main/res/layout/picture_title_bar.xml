<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/titleViewBg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?colorPrimary" />

    <TextView
        android:id="@+id/picture_title"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="150dp"
        android:maxEms="11"
        android:text="@string/picture_camera_roll"
        android:textColor="#030303"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="10dp"
        android:layout_height="6dp"
        android:layout_alignTop="@id/picture_title"
        android:layout_alignBottom="@id/picture_title"
        android:layout_toRightOf="@id/picture_title"
        android:scaleType="centerInside"
        android:layout_marginLeft="5dp"
        app:srcCompat="?attr/picture.arrow_down.icon" />

    <TextView
        android:id="@+id/picture_right"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textColor="#B4BEC7"
        android:text="@string/picture_take"
        android:background="@drawable/shape_bbs_send_bac"
        android:textSize="14sp" />
    <ImageButton
        android:id="@+id/picture_left_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/nav_cancel"
        android:background="#00000000"/>
</merge>

