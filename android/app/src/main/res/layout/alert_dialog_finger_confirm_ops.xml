<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_alert_dialog_bac" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_alert_dialog_bac"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:text="@string/dialog_hint"
            android:textSize="18sp"
            android:visibility="visible"
            android:textColor="@color/contentTitle"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/Tv_hint1"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_title"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/contentColor"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Tv_hint1"
            android:src="@drawable/icon_finger"
            />
        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="match_parent"
            android:layout_below="@+id/iv_image"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:textColor="@color/contentColorDark"
            android:layout_margin="15dp"
            android:scrollbars="vertical"
            android:lineSpacingExtra="3dp"
            android:maxLines="4"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_check"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/tv_sign"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:id="@+id/ll_check_container"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/shape_dialog_checkbox"
                >
                <ImageView
                    android:id="@+id/iv_check"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ico_select_check"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/contentColor"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:text="@string/need_urgent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_check"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:textColor="@color/contentTitle"
                android:text="@string/no_exit"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"

                android:background="@drawable/shape_dialog_button_left"
                />
            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="@string/exit"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_dialog_button_right"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>