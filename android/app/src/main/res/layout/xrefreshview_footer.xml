<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/xrefreshview_footer_content"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/common_bac"
    android:padding="10dp">
    <LinearLayout
        android:id="@+id/ll_loading_container"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/xrefreshview_footer_progressbar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible"
            app:indicatorName="LineSpinFadeLoaderIndicator"
            app:indicatorColor="@color/contentColorDark"/>
        <TextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="@color/contentColorDark"
            android:text="@string/loading_more" />
    </LinearLayout>
    <TextView
        android:id="@+id/xrefreshview_footer_hint_textview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/contentColorDark"
        android:text="@string/xrefreshview_footer_hint_normal" />
    <TextView
        android:id="@+id/xrefreshview_footer_click_textview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/contentColorDark"
        android:text="@string/xrefreshview_footer_hint_ready" />
</RelativeLayout>