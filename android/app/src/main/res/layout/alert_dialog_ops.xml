<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_alert_dialog_bac" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_alert_dialog_bac"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:text="@string/dialog_hint"
            android:textSize="18sp"
            android:visibility="gone"
            android:textColor="@color/contentTitle"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/Tv_hint1"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_title"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:scrollbars="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/contentColor"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/Tv_hint1"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:textColor="@color/contentTitle"
                android:text="@string/no_exit"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"

                android:background="@drawable/shape_dialog_button_left"
                />
            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="@string/exit"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_dialog_button_right"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>