<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".mvp.ui.activity.DemoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt_clear"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="清除数据/缓存"
                android:layout_marginTop="40dp"
                />
            <Button
                android:id="@+id/bt_privacy"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:text="隐私政策(允许后初始化分享sdk)"
                android:layout_marginTop="15dp"
                />
            <Button
                android:id="@+id/bt_version_check"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="版本校验"
                android:layout_marginTop="15dp"
                />
            <Button
                android:id="@+id/bt_login"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="登录"
                android:layout_marginTop="15dp"
                />
            <Button
                android:id="@+id/bt_select_photo"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="选择照片"
                android:layout_marginTop="15dp"
                />
             <HorizontalScrollView
                 android:layout_width="match_parent"
                 android:scrollbars="none"
                 android:layout_height="wrap_content">
                 <LinearLayout
                     android:id="@+id/ll_picture_container"
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:gravity="center_vertical"
                     android:visibility="gone"
                     android:layout_height="100dp">
                 </LinearLayout>
             </HorizontalScrollView>
            <Button
                android:id="@+id/bt_select_file"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="选择文件"
                android:layout_marginTop="15dp"
                />
             <TextView
                 android:id="@+id/tv_file_name"
                 android:layout_width="wrap_content"
                 android:textSize="16sp"
                 android:visibility="gone"
                 android:layout_marginTop="10dp"
                 android:textColor="@color/colorPrimaryDark"
                 android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/h5_debug"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="H5调试页面"
                android:layout_marginTop="15dp"
                />
            <Button
                android:id="@+id/h5_share"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="分享"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>