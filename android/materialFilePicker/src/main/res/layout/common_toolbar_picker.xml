<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="64dp"
    app:contentInsetLeft="0dp"
    android:paddingTop="20dp"
    app:contentInsetStart="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageButton
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_marginLeft="8dp"
            android:src="@drawable/nav_cancel"
            android:background="@color/transparent"/>
        <TextView
            android:id="@+id/midText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textSize="18sp"
            android:textColor="#222222" />
        <RelativeLayout
            android:id="@+id/rl_right"
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:visibility="visible"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/ib_inner_right2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="gone"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:layout_toLeftOf="@+id/ib_inner_right"
                android:background="@color/transparent"
                />
            <ImageButton
                android:id="@+id/ib_inner_right"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                />
            <ImageButton
                android:id="@+id/ib_inner_right3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:layout_toLeftOf="@+id/tv_inner_right"
                android:background="@color/transparent"
                />
            <TextView
                android:id="@+id/tv_inner_right"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:text="rightText"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"
                android:gravity="center"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_top_separate"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#E8E8E8"
            />
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>